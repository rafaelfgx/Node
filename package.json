{
    "name": "node",
    "version": "1.0.0",
    "license": "MIT",
    "scripts": {
        "update": "npm install -g npm-check-updates && ncu -u",
        "restore": "npm install",
        "check": "prettier src test --config .prettierrc --check && eslint",
        "fix": "prettier src test --config .prettierrc --write && eslint --fix",
        "test": "jest --no-cache --coverage --detectOpenHandles",
        "start": "nodemon --inspect=3000 -e ts --exec node --env-file=.env -r ts-node/register src/main.ts",
        "build": "tsc"
    },
    "dependencies": {
        "cors": "2.8.6",
        "express": "5.2.1",
        "helmet": "8.1.0",
        "mongoose": "9.2.1",
        "zod": "4.3.6"
    },
    "devDependencies": {
        "@eslint/js": "9.39.2",
        "@types/cors": "2.8.19",
        "@types/express": "5.0.6",
        "@types/jest": "30.0.0",
        "@types/node": "25.2.3",
        "@types/supertest": "6.0.3",
        "eslint": "9.39.2",
        "eslint-config-prettier": "10.1.8",
        "globals": "17.3.0",
        "jest": "30.2.0",
        "nodemon": "3.1.11",
        "prettier": "3.8.1",
        "supertest": "7.2.2",
        "testcontainers": "11.11.0",
        "ts-jest": "29.4.6",
        "ts-node": "10.9.2",
        "typescript": "5.9.3",
        "typescript-eslint": "8.55.0"
    }
}
